<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".OTPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <include layout="@layout/text_view"
            android:id="@+id/includedTextViewLayout"/>

        <include layout="@layout/otp_status"
            android:id="@+id/includedCheckCircle"/>

        <include
            android:id="@+id/resentOTP"
            layout="@layout/resend_otp" />

        <include
            android:id="@+id/includedButtonLayout"
            layout="@layout/button" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>